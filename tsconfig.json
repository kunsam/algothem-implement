{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}